<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="RelativeLayout版本的MultiStatusView演示"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="当前状态: -"
        android:textSize="16sp" />

    <!-- RelativeLayout版本的MultiStatusView -->
    <io.github.xesam.android.views.status.example.RelativeMultiStatusView
        android:id="@+id/relative_multi_status_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:debugMode="true"
        app:defaultStatus="content"
        app:statusIdPrefix="relative_">

        <!-- 内容状态 -->
        <LinearLayout
            android:id="@+id/relative_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e8f5e9"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内容状态"
                android:textColor="#2e7d32"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="这是基于RelativeLayout的内容状态"
                android:textColor="#4caf50"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- 加载状态 -->
        <LinearLayout
            android:id="@+id/relative_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff3e0"
            android:gravity="center"
            android:orientation="vertical">

            <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载中..."
                android:textColor="#f57c00"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="RelativeLayout版本"
                android:textColor="#ff9800"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- 空状态 -->
        <LinearLayout
            android:id="@+id/relative_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f3e5f5"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="📭"
                android:textSize="48sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无数据"
                android:textColor="#7b1fa2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="RelativeLayout空状态"
                android:textColor="#9c27b0"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- 错误状态 -->
        <LinearLayout
            android:id="@+id/relative_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffebee"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="❌"
                android:textSize="48sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载失败"
                android:textColor="#c62828"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="RelativeLayout错误状态"
                android:textColor="#f44336"
                android:textSize="14sp" />

        </LinearLayout>

    </io.github.xesam.android.views.status.example.RelativeMultiStatusView>

    <!-- 控制按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_show_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="内容" />

            <Button
                android:id="@+id/btn_show_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="加载" />

            <Button
                android:id="@+id/btn_show_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="空状态" />

            <Button
                android:id="@+id/btn_show_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="错误" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_show_unknown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="未知状态" />

            <Button
                android:id="@+id/btn_auto_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自动切换" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>